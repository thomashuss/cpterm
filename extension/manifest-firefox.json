{
  "description": "Interface between competitive programming websites and your code editor",
  "manifest_version": 3,
  "name": "CPTerm",
  "version": "1.0",
  "icons": {
    "16": "icons/cpterm.svg",
    "32": "icons/cpterm.svg",
    "48": "icons/cpterm.svg",
    "128": "icons/cpterm.svg"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "cpterm@thomashuss.github.io",
      "strict_min_version": "128.0"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.hackerrank.com/*",
        "*://*.leetcode.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "options_ui": {
    "page": "options.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "scraper.js"
      ],
      "matches": [
        "*://*.hackerrank.com/*",
        "*://*.leetcode.com/*"
      ]
    }
  ],
  "permissions": [
    "nativeMessaging",
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://*.hackerrank.com/*",
    "*://*.leetcode.com/*"
  ]
}