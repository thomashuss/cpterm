{
  "description": "Interface between competitive programming websites and your code editor",
  "manifest_version": 3,
  "name": "CPTerm",
  "version": "1.0",
  "icons": {
    "16": "icons/cpterm-16.png",
    "32": "icons/cpterm-32.png",
    "48": "icons/cpterm-48.png",
    "128": "icons/cpterm-128.png"
  },
  "minimum_chrome_version": "104",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.hackerrank.com/*",
        "*://*.leetcode.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "options_ui": {
    "page": "options.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "scraper.js"
      ],
      "matches": [
        "*://*.hackerrank.com/*",
        "*://*.leetcode.com/*"
      ]
    }
  ],
  "permissions": [
    "nativeMessaging",
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://*.hackerrank.com/*",
    "*://*.leetcode.com/*"
  ]
}